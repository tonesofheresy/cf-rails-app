<section class="row">
  <div class="col-md-6 col-sm-6 col-sm-offset-3 col-md-offset-3">
    <h1 class="center">Create a new account</h1>
    <%= form_for @user do |f| %>
     
      <%= f.label :name, "Full Name (required)" %>
			<%= f.text_field :name %>

			<%= f.label :email, "Email (required)" %>
			<%= f.text_field :email %>

			<%= f.label :password %>
			<%= f.password_field :password %>

			<%= f.label :password_confirmation, "Confirm Password" %>
			<%= f.password_field :password_confirmation %>

			<% if @user.errors.any? %>
				<% @user.errors.full_messages.each do |msg| %>
			  	<p class='error-messages'>
			  		<%= msg %>
			  	</p>
			  <% end %>
			<% end %>
     
      <%= f.submit "Create user", class: "btn btn-large btn-primary" %>
     
    <% end %>
  </div>
</section>