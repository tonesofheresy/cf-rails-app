<% if signed_in? %>
	<section class="row">
		<div class="col-xs-12 col-md-8 col-sm-8 col-md-offset-2 col-sm-offset-2 col-lg-6 col-lg-offset-3">

		<h1 class="center">Current Users</h1>

		<span class="header center col-md-3 col-sm-3 col-xs-3">Name</span>
		<span class="header center col-md-5 col-sm-5 col-xs-5">Email</span>
		<span class="header center col-md-4 col-sm-4 col-xs-4">Actions</span>

		<% @users.each do |user| %>

			<span class="center col-md-3 col-sm-3 col-xs-3"><%= "#{user.first} #{user.last}" %></span>
			<span class="center col-md-5 col-sm-5 col-xs-5"><%= "#{user.email}" %></span>
			<%= link_to "Edit", edit_user_path(user), class: "center col-md-2 col-sm-2 col-xs-2" %>
			<%= link_to "Delete", user, method: :delete, data: { confirm: "Are you sure?" }, class: "center col-md-2 col-sm-2 col-xs-2" %>

		<% end %>
		<%= link_to "Create new user", new_user_path, class: "btn btn-primary btn-md col-md-2 col-sm-2 col-xs-2 col-md-offset-5 col-sm-offset-5 col-xs-offset-5", style: "margin-top: 40px;" %>
	</section>
<% else %>
	<section class="row">
		<div class="col-xs-12 col-md-8 col-sm-8 col-md-offset-2 col-sm-offset-2 col-lg-6 col-lg-offset-3 center jumbotron">
			<h1>Welcome to the User Database Manager!</h1> 
			<h2>To view or edit the database, please sign in.</h2>
			<br>
			<%= link_to "Sign in!", signin_path, class: "btn btn-lg btn-primary" %>
			<p style="margin-left: 0;">Don't have an account? <%= link_to "Sign up now", signup_path %>
		</div>
	</section>
<% end %>